<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/font_middle_school"
            android:gravity="center"
            android:text="@string/select_txt"
            android:textSize="24sp" />
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:stretchColumns="0,1,2">

        <!--첫번째 Row-->
        <TableRow>

            <TableLayout
                android:layout_width="120dp"
                android:paddingHorizontal="4dp">

                <ImageButton
                    android:id="@+id/joy_img"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:background="@drawable/joy_off"

                    android:gravity="center"
                    android:onClick="selected_next_move"
                    android:padding="25dp" />

                <TextView
                    android:id="@+id/joy_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/font_middle_school"
                    android:gravity="center"
                    android:text="@string/joy"
                    android:tag="joy"
                    android:textSize="20sp" />
            </TableLayout>

            <TableLayout
                android:layout_width="120dp"
                android:paddingHorizontal="4dp">

                <ImageButton
                    android:id="@+id/happy_img"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:background="@drawable/happy_off"
                    android:gravity="center"
                    android:onClick="selected_next_move"
                    android:padding="25dp"
                    android:tag="happy" />

                <TextView
                    android:id="@+id/happy_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/font_middle_school"
                    android:gravity="center"
                    android:text="@string/happy"
                    android:textSize="18sp" />
            </TableLayout>

            <TableLayout
                android:layout_width="120dp"
                android:paddingHorizontal="4dp">

                <ImageButton
                    android:id="@+id/proud_img"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:background="@drawable/proud_off"
                    android:gravity="center"
                    android:onClick="selected_next_move"
                    android:padding="25dp"
                    android:tag="proud" />

                <TextView
                    android:id="@+id/proud_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/font_middle_school"
                    android:gravity="center"
                    android:text="@string/proud"
                    android:textSize="18sp" />
            </TableLayout>
        </TableRow>

        <!--두번쨰 Row-->
        <TableRow android:layout_marginTop="20dp">

            <TableLayout
                android:layout_width="120dp"
                android:paddingHorizontal="4dp">

                <ImageButton
                    android:id="@+id/tired_img"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:background="@drawable/tired_off"
                    android:gravity="center"
                    android:onClick="selected_next_move"
                    android:padding="20dp"
                    android:tag="tired" />

                <TextView
                    android:id="@+id/tired_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/font_middle_school"
                    android:gravity="center"
                    android:text="@string/tired_txt"
                    android:textSize="18sp" />
            </TableLayout>

            <TableLayout
                android:layout_width="120dp"
                android:paddingHorizontal="4dp">

                <ImageButton
                    android:id="@+id/sadness_img"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:background="@drawable/sadness_off"
                    android:gravity="center"
                    android:onClick="selected_next_move"
                    android:padding="20dp"
                    android:tag="sadness" />

                <TextView
                    android:id="@+id/sadness_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/font_middle_school"
                    android:gravity="center"
                    android:text="@string/sadness_txt"
                    android:textSize="18sp" />
            </TableLayout>

            <TableLayout
                android:layout_width="120dp"
                android:paddingHorizontal="4dp">

                <ImageButton
                    android:id="@+id/angry_img"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_click1"
                    android:gravity="center"
                    android:onClick="selected_next_move"
                    android:padding="20dp"
                    android:tag="angry" />

                <TextView
                    android:id="@+id/angry_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/font_middle_school"
                    android:gravity="center"
                    android:text="@string/angry_txt"
                    android:textSize="18sp" />
            </TableLayout>
        </TableRow>

        <TableRow android:layout_marginTop="20dp">>
            <TableLayout
                android:layout_width="120dp"
                android:paddingHorizontal="4dp">

                <ImageButton
                    android:id="@+id/anxiety_img"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:background="@drawable/anxiety_off"
                    android:gravity="center"
                    android:onClick="selected_next_move"
                    android:padding="20dp"
                    android:tag="anxiety" />

                <TextView
                    android:id="@+id/anxiety_text_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/font_middle_school"
                    android:gravity="center"
                    android:text="@string/anxiety_txt"
                    android:textSize="18sp" />
            </TableLayout>

            <TableLayout
                    android:layout_width="120dp"
                    android:paddingHorizontal="4dp">

                <ImageButton
                    android:id="@+id/gloom_img"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:background="@drawable/gloom_off"
                    android:gravity="center"
                    android:onClick="selected_next_move"
                    android:padding="20dp"
                    android:tag="gloom" />

                    <TextView
                        android:id="@+id/gloom_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/font_middle_school"
                        android:gravity="center"
                        android:text="@string/gloom_txt"
                        android:textSize="18sp" />
                </TableLayout>

            <TableLayout
                    android:layout_width="120dp"
                    android:paddingHorizontal="4dp">

                <ImageButton
                    android:id="@+id/peaceful_img"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:background="@drawable/peaceful_off"
                    android:gravity="center"
                    android:onClick="selected_next_move"
                    android:padding="20dp"
                    android:tag="peaceful" />

                    <TextView
                        android:id="@+id/peaceful_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/font_middle_school"
                        android:gravity="center"
                        android:text="@string/peaceful_txt"
                        android:textSize="18sp" />
                </TableLayout>
        </TableRow>

    </TableLayout>

    <ImageButton
        android:id="@+id/next_btn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:onClick="selected_next_move"
        android:padding="35dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/next_" />
</LinearLayout>