<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".WriteActivity"
    android:background="@drawable/white_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="5">

        <ImageButton
            android:id="@+id/back_Write_BTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/back_btn"
            tools:src="@drawable/back_btn" />

        <TextView
            android:id="@+id/monthYear_Read_TXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="월/연도"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:autoSizeTextType="none" />

        <ImageButton
            android:id="@+id/save_Write_BTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/savebtn"
            tools:src="@drawable/savebtn" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/day_Read_TXT"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="날짜/요일"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="20"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/emotion_Write_IMG"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:contentDescription="TODO"
            android:cropToPadding="false" />

        <EditText
            android:id="@+id/diaryArea_Read_ETXT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="30dp"
            android:ems="10"
            android:fontFamily="@font/font_middle_school"
            android:gravity="top"
            android:hint="일기를 입력하세요."
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:lines="30"
            android:maxLines="30"
            android:padding="20dp"
            android:scrollbars="vertical"
            android:shadowColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>