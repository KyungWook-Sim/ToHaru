<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ReadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back_Read_BTN"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="fitStart"
            android:src="@drawable/back_btn"
            android:text="@string/back" />


        <ImageButton
            android:id="@+id/remove_Read_BTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/delete"
            android:text="@string/back" />

        <ImageButton
            android:id="@+id/save_Read_BTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/save_btn"
            android:text="@string/save" />

        <ImageButton
            android:id="@+id/modify_Read_BTN"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="2"
            android:backgroundTint="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/pencil"
            android:text="@string/back" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="20"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="233dp"
            android:layout_height="198dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/emotion_Read_IMG"
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/joy" />
        </LinearLayout>

        <TextView
            android:id="@+id/diaryArea_Read_ETXT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/textview_round"
            android:ems="10"
            android:fontFamily="@font/font_middle_school"
            android:gravity="start|top"
            android:hint="등록한 일기 "
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:padding="20dp"
            android:textSize="25dp" />
    </LinearLayout>

</LinearLayout>